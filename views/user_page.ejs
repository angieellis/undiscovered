<link rel="stylesheet" href="/stylesheets/tour_new.css">
<link rel="stylesheet" href="/stylesheets/user_page.css">
<link rel="stylesheet" href="/stylesheets/dashboard.css">

<div class="not-index container">
  <div id="container" >
    <div class="title-box">
      <h1 class="dashboard-title">User Page</h1>
    </div>

    <div id="left-box" class="left-box profile-box">
      <h4 class="h4">Profile</h4>
      <div id="inner-left-box" class="profile-inner-box">
        <div id="individual-user-display"></div>
      </div>
    </div>

    <div class=" right-box">
      <div id="inner-right-box" class="inner-box user-right-box">
        <h2 class="browse-title">Posts</h2>
        <div id="user-authored-list" class="clearfix">
        </div>
      </div>
    </div>

  </div>
</div>


<script id="individual-user-template" type="text/x-handlebars-template">
      <div class="image-inner-line-box">
        <p><label class="sm-label"></p>
        <img src="{{profile_pic}}" class="circle-pic">
      </div>
      <div class="inner-line-box">
        <p><label class="sm-label">Username:</label></p>
        <p class="lg-label">{{username}}</p>
      </div>
      <div class="inner-line-box">
        <p><label class="sm-label">First Name:</label></p>
        <p class="lg-label">{{first_name}}</p>
      </div>
      <div class="inner-line-box">
        <p><label class="sm-label">Last Name:</label></p>
        <p class="lg-label">{{last_name}}</p>
      </div>
      <div class="inner-line-box">
        <p><label class="sm-label">Email:</label></p>
        <p class="lg-label">{{email}}</p>
      </div>
      <input type="hidden" value="{{_id}}">
</script>



<script id="individual-user-authored-template" type="text/x-handlebars-template">
  <a href="tours/display/{{_id}}">
    <div class="card-box-275">
      <div class="card-shadow"></div>
      <img src="{{photo_url}}" class="card-img ">
      <h2 class="card-img-text">{{title}}</h2>
      <img src="https://media.licdn.com/mpr/mpr/shrinknp_400_400/p/8/005/038/221/2d4502f.jpg" class="card-circle-img">
      <div class="card-tag-template-div">
        <div class="card-tag-border-line">&nbsp;</div>
        <h3 class="card-tag-titles">
          <i class="fa fa-tags card-tag"></i>
          Interest{{tag}}
        </h3>
      </div>
    </div>
  </a>
</script>
